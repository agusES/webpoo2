<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>

		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>fr</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>com.unnobaPOO.messages</base-name>
			<var>msg</var>
		</resource-bundle>

	</application>

	<navigation-rule>

		<description>Registro de nuevo usuario</description>
		<display-name>register.xhtml</display-name>
		<from-view-id>/register.xhtml</from-view-id>

		<navigation-case>
			<from-action>#{usuarioController.register()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/inicio.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{usuarioController.register()}</from-action>
			<from-outcome>usernameInUse</from-outcome>
			<to-view-id>/errorSignup.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>

	<navigation-rule>
		<description>PÃ¡gina principal</description>
		<display-name>inicio.xhtml</display-name>
		<from-view-id>/inicio.xhtml</from-view-id>

		<navigation-case>
			<from-action>#{usuarioController.login()}</from-action>
			<from-outcome>successAdmin</from-outcome>
			<to-view-id>/homeAdmin.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{usuarioController.login()}</from-action>
			<from-outcome>successUser</from-outcome>
			<to-view-id>/homeUser.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>

	<navigation-rule>
		<description>Home admin</description>
		<display-name>homeAdmin.xhtml</display-name>
		<from-view-id>/homeAdmin.xhtml</from-view-id>

		<navigation-case>
			<to-view-id>/inicioActivity.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>


</faces-config>
